<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>	
			
	
		<record model="ir.ui.view" id="view_partner_form_inherited">
            <field name="name">view.partner.form.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="before">
                    <field name="dni" string=""/>
                </xpath>
                <xpath expr="//page[@name='sales_purchases']" position="replace">
                     <page name='partner_type' string="Tipo de contacto">
						<group>
							<group>
								<field name="customer" modifiers="{}"/>
								<field name="supplier" modifiers="{}"/>
							</group>
							<group>
								<field name="artisan" modifiers="{}"/>
								<field name="volunteer" modifiers="{}"/>
							</group>
						</group>
                     </page>
                </xpath>
            </field>
        </record>
    
	</data>
</openerp>